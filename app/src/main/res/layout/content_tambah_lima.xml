<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.TambahActivity"
    tools:showIn="@layout/activity_tambah" >



    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_marginBottom="40dp"
        android:layout_alignParentTop="true"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/linear1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akses Jalan :"
                android:textColorHint="@color/primary_text"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center">
                <!-- Title Label -->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto 1"
                        android:textColorHint="@color/primary_text"
                        android:textSize="18sp"
                        />
                    <ImageView
                         android:id="@+id/input_akses_jalan_satu"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:src="@drawable/ic_action_picture"
                         android:scaleType="fitCenter"
                     />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto 2"
                        android:textColorHint="@color/primary_text"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/input_akses_jalan_dua"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_action_picture"
                        android:scaleType="fitCenter"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Papan Identitas :"
                android:textColorHint="@color/primary_text"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center">
                <!-- Title Label -->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/input_papan_identitas"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_action_picture"
                        android:scaleType="fitCenter"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Site Area :"
                android:textColorHint="@color/primary_text"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center">
                <!-- Title Label -->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tampak Luar"
                        android:textColorHint="@color/primary_text"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/input_site_area_luar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_action_picture"
                        android:scaleType="fitCenter"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tampak Dalam"
                        android:textColorHint="@color/primary_text"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/input_site_area_dalam"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_action_picture"
                        android:scaleType="fitCenter"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kondisi Sekitar :"
                android:textColorHint="@color/primary_text"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center">
                <!-- Title Label -->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utara"
                        android:textColorHint="@color/primary_text"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/input_kondisi_utara"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_action_picture"
                        android:scaleType="fitCenter"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timur"
                        android:textColorHint="@color/primary_text"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/input_kondisi_timur"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_action_picture"
                        android:scaleType="fitCenter"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selatan"
                        android:textColorHint="@color/primary_text"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/input_kondisi_selatan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_action_picture"
                        android:scaleType="fitCenter"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barat"
                        android:textColorHint="@color/primary_text"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/input_kondisi_barat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_action_picture"
                        android:scaleType="fitCenter"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"

                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/white"
                    android:background="@color/warnaLight"
                    android:text="Simpan"
                    android:onClick="simpan"/>

        </LinearLayout>



    </ScrollView>

    <EditText android:id="@+id/input_foto_satu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textColorHighlight="@color/primary_text"
        android:text=""
        android:visibility="invisible"/>
    <EditText android:id="@+id/input_foto_dua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textColorHighlight="@color/primary_text"
        android:text=""
        android:visibility="invisible"/>
    <EditText android:id="@+id/input_foto_papan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textColorHighlight="@color/primary_text"
        android:text=""
        android:visibility="invisible"/>
    <EditText android:id="@+id/input_foto_site_luar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textColorHighlight="@color/primary_text"
        android:text=""
        android:visibility="invisible"/>
    <EditText android:id="@+id/input_foto_site_dalam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textColorHighlight="@color/primary_text"
        android:text=""
        android:visibility="invisible"/>
    <EditText android:id="@+id/input_foto_kondisi_utara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textColorHighlight="@color/primary_text"
        android:text=""
        android:visibility="invisible"/>
    <EditText android:id="@+id/input_foto_kondisi_timur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textColorHighlight="@color/primary_text"
        android:text=""
        android:visibility="invisible"/>
    <EditText android:id="@+id/input_foto_kondisi_selatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textColorHighlight="@color/primary_text"
        android:text=""
        android:visibility="invisible"/>
    <EditText android:id="@+id/input_foto_kondisi_barat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textColorHighlight="@color/primary_text"
        android:text=""
        android:visibility="invisible"/>
</RelativeLayout>
